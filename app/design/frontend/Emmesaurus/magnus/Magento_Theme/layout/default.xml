<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_img_width" xsi:type="number">150</argument> 
                <argument name="logo_img_height" xsi:type="number">53</argument>
            </arguments>
        </referenceBlock>
       <referenceContainer name="page.top">
	    <container name="jumbotron" as="jumbotron" label="Jumbotron"  htmlTag="div" htmlClass="jumbotron" before="-">
	    </container>
	        </referenceContainer>
	        <referenceBlock name="footer_links">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-reviews">
            <arguments>
                <argument name="label" xsi:type="string">Customer Reviews</argument>
                <argument name="path" xsi:type="string">customer-reviews</argument>
            </arguments>
        </block>
    </referenceBlock>
                    </body>
</page>
